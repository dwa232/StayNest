<% layout("/layouts/boilerplate") %>

<div class="container mt-5">

  <!-- HERO SECTION -->
  <div class="text-center mt-3">
    <h1 class="fw-bold display-5 hero-title">
        Find your next stay
    </h1>

    <h2 class="fw-bold premium-text mb-3 mt-5">
        StayNest - Find Your Comfort Away from Home
    </h2>


    <p class="text-muted fs-5 no-dropcap">
        Discover unique places to stay, anywhere in the world
    </p>

    <a href="/listings" class="btn btn-danger btn-lg mt-3">
      Explore Stays
    </a>
  </div>


    <section class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h3 class="fw-bold">Featured stays</h3>
            <a href="/listings" class="text-decoration-none fw-semibold">
            View all →
            </a>
        </div>

        <div class="row g-4">

            <!-- CARD 1 -->
            <div class="col-md-4">
                <div class="featured-card">
                    <img 
                        src="/images/beach-villa.jpg" 
                        alt="Luxury Beach Villa"
                        class="featured-img"
                    >
                    <div class="featured-body">
                        <h5>Luxury Beach Villa</h5>
                        <p>Goa, India</p>
                        <span>₹8,500 / night</span>
                    </div>
                </div>
            </div>

            <!-- CARD 2 -->
            <div class="col-md-4">
                <div class="featured-card">
                    <img 
                        src="/images/mountain-cabin.jpg" 
                        alt="Mountain View Cabin"
                        class="featured-img"
                    >
                    <div class="featured-body">
                        <h5>Mountain View Cabin</h5>
                        <p>Manali, India</p>
                        <span>₹4,200 / night</span>
                    </div>
                </div>
            </div>

            <!-- CARD 3 -->
            <div class="col-md-4">
                <div class="featured-card">
                    <img 
                        src="/images/city-studio.jpg" 
                        alt="Urban Smart Studio"
                        class="featured-img"
                    >
                    <div class="featured-body">
                        <h5>Urban Smart Studio</h5>
                        <p>Bangalore, India</p>
                        <span>₹3,100 / night</span>
                    </div>
                </div>
            </div>

        </div>
    </section>
  

    <section class="popular-destinations">
        <h2>Popular Destinations</h2>
        <p class="subtitle">
            Discover our most visited places with the best stays and experiences
        </p>

        <div class="destination-grid">

            <!-- Card 1 -->
            <div class="destination-card">
                <img src="https://images.unsplash.com/photo-1502602898657-3e91760cbb34" alt="Paris">
                <div class="overlay">
                    <span class="country">France</span>
                    <h3>Paris</h3>
                    <p>The City of Light</p>                   
                </div>
            </div>

            <!-- Card 2 -->
            <div class="destination-card">
                <img src="https://images.unsplash.com/photo-1507525428034-b723cf961d3e" alt="Maldives">
                <div class="overlay">
                    <span class="country">India</span>
                    <h3>Goa</h3>
                    <p>Tropical paradise</p>                   
                </div>
            </div>

            <!-- Card 3 -->
            <div class="destination-card">
                <img src="https://images.unsplash.com/photo-1549693578-d683be217e58" alt="Tokyo">
                <div class="overlay">
                    <span class="country">India</span>
                    <h3>Bangalore</h3>
                    <p>Where tradition meets future</p>                   
                </div>
            </div>

            <!-- Card 4 -->
            <div class="destination-card">
                <img src="https://images.unsplash.com/photo-1534447677768-be436bb09401" alt="New York">
                <div class="overlay">
                    <span class="country">USA</span>
                    <h3>New York</h3>
                    <p>The Big Apple</p>
                </div>
            </div>

            <!-- Card 5 -->
            <div class="destination-card">
                <img src="https://images.unsplash.com/photo-1509475826633-fed577a2c71b" alt="Santorini">
                <div class="overlay">
                    <span class="country">Greece</span>
                    <h3>Santorini</h3>
                    <p>Stunning Aegean views</p>                   
                </div>
            </div>

            <!-- Card 6 -->
            <div class="destination-card">
                <img src="https://images.unsplash.com/photo-1501785888041-af3ef285b470" alt="Bali">
                <div class="overlay">
                    <span class="country">Indonesia</span>
                    <h3>Bali</h3>
                    <p>Island of the Gods</p>
                 </div>
            </div>

        </div>
    </section>


   <section class="host-cta mt-3">
        <h2>Have a Property?</h2>
        <p>List your property on StayNest and reach thousands of travelers.</p>
    </section>
  
</div>