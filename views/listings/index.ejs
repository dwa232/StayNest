<% layout("/layouts/boilerplate") %>

<!-- CATEGORY FILTER BAR -->
<div class="filters-wrapper border-bottom">

  <div id="filters">
    <% categories.forEach(cat => { %>
      <a
        href="/listings?category=<%= encodeURIComponent(cat.name) %>"
        class="filter-link <%= activeCategory === cat.name ? 'active' : '' %>"
      >
        <div class="filter">
          <i class="fa-solid <%= cat.icon %>"></i>
          <p><%= cat.name %></p>
        </div>
      </a>
    <% }) %>
  </div>

  <!-- FIXED TOGGLE -->
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input 
        class="form-check-input" 
        type="checkbox" 
        role="switch" 
        id="switchCheckDefault"
      />
      <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
    </div>
  </div>

</div>
<div class="listings mt-3">
    <% for (let listing of allListings) { %>

        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card listing-card">
                <img 
                    src="<%= listing.image?.url || '/images/default.jpg' %>" 
                    class="card-img-top"
                    alt="listing_image"
                />
                <!-- overlay effect on image (you can write somthing on images and set opacity ) -->
                <div class="card-img-overlay"></div>

                <div class="card-body">
                    <p class="card-text mb-1">
                        <strong><%= listing.title %></strong>
                    </p>
                    <p class="mb-0">
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                        <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>


<% if (allListings.length === 0) { %>
  <p class="text-center mt-4 text-muted">
    ðŸ¤” "Oops! No stays available here"
  </p>
<% } %>


<script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo){
            if(info.style.display != "inline"){
                info.style.display = "inline";
            }else{
                info.style.display = "none";
            }
        }
    });
</script>